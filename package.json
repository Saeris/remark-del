{
  "name": "@saeris/remark-del",
  "version": "0.0.0",
  "description": "Remark plugin to add HTML <del> element syntax in markdown",
  "author": "Drake Costa <drake@saeris.io> (https://github.com/Saeris/)",
  "license": "MIT",
  "keywords": [
    "unified",
    "mdast",
    "markdown",
    "MDX",
    "remark",
    "plugin",
    "remark plugin",
    "remark del",
    "html del",
    "html del element",
    "deleted text",
    "remark deleted text"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/remark-del.git"
  },
  "homepage": "https://github.com/saeris/remark-del#readme",
  "bugs": {
    "url": "https://github.com/saeris/remark-del/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "yarn@4.10.3",
  "type": "module",
  "main": "src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "module": "./dist/index.js",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./theme.css": "./dist/theme.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "sideEffects": false,
  "scripts": {
    "ci": "yarn lint && yarn typecheck && yarn test",
    "build": "tsdown",
    "lint": "eslint \"./src/**/*.{j,t}s?(x)\"",
    "format": "yarn lint --fix",
    "release": "yarn build && changeset publish",
    "test": "vitest --fileParallelism",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/mdast": "^4.0.4",
    "unist-builder": "^4.0.0",
    "unist-util-find-after": "^5.0.0",
    "unist-util-find-all-after": "^5.0.0",
    "unist-util-find-all-before": "^5.0.0",
    "unist-util-find-between-all": "^1.1.0",
    "unist-util-visit": "^5.0.0"
  },
  "peerDependencies": {
    "unified": "^11"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@saeris/eslint-config": "^3.1.0",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.0.1",
    "dedent": "^1.7.0",
    "eslint": "9.28.0",
    "prettier": "^3.5.3",
    "rehype-format": "^5.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3",
    "unified": "^11.0.5",
    "vitest": "^3.2.3"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
